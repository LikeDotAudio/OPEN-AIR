{
  "nab": {
    "type": "OcaBlock",
    "description": "NAB Bandwidth Monitoring",
    "fields": {
      "NAB_bandwidth_settings": {
        "type": "OcaBlock",
        "description": "Bandwidth and Sweep Monitoring",
        "fields": {
          "Execute Command": {
            "type": "_GuiActuator",
            "AES70": "OcaBooleanActuator",
            "active": true,
            "trigger": false,
            "message": ":SENSe:BANDwidth:RESolution?;:SENSe:BANDwidth:VIDeo?;:SENSe:BANDwidth:VIDeo:AUTO?;:INITiate:CONTinuous?;:SENSe:SWEep:TIME?",
            "layout": { "height": 30, "sticky": "" }
          },
          "Outputs": {
            "type": "OcaBlock",
            "description": "Bandwidth Readbacks",
            "fields": {
              "RBW_Hz": {
                "value": "The resolution bandwidth in Hz.",
                "type": "_GuiValue"
              },
              "VBW_Hz": {
                "value": "The video bandwidth in Hz.",
                "type": "_GuiValue"
              },
              "VBW_Auto_On": {
                "value": "Boolean for VBW auto state.",
                "type": "_GuiValue"
              },
              "Continuous_Mode_On": {
                "value": "Boolean for continuous mode state.",
                "type": "_GuiValue"
              },
              "Sweep_Time_s": {
                "value": "The sweep time in seconds.",
                "type": "_GuiValue"
              }
            }
          }
        }
      }
    }
  },
  "rig": {
    "type": "OcaBlock",
    "description": "RIG Bandwidth Commands",
    "fields": {
      "rig_RBW_VBW_Hz": {
        "type": "OcaBlock",
        "description": "Set Resolution and Video BW",
        "fields": {
          "Execute Command": {
            "type": "_GuiActuator",
            "AES70": "OcaBooleanActuator",
            "active": true,
            "trigger": false,
            "message": ":SENSe:BANDwidth:RESolution <rbw_hz_value>;:SENSe:BANDwidth:VIDeo <vbw_hz_value>",
            "layout": { "height": 30, "sticky": "" }
          },
          "Input": {
            "type": "OcaBlock",
            "fields": {
              "rbw_hz_value": {
                "value": "100000",
                "type": "_GuiValue",
                "description": "The SCPI input for RBW."
              },
              "vbw_hz_value": {
                "value": "100000",
                "type": "_GuiValue",
                "description": "The SCPI input for VBW."
              }
            }
          }
        }
      }
    }
  },
