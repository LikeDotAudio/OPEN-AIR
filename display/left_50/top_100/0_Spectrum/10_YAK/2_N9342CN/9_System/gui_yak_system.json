{
  "Get": {
    "type": "OcaBlock",
    "description": "System Status and Identification",
    "fields": {
      "Get_error_information": {
        "type": "OcaBlock",
        "description": "System Error Check",
        "fields": {
          "Execute Command": {
            "type": "_GuiActuator",
            "AES70": "OcaBooleanActuator",
            "active": true,
            "trigger": false,
            "message": ":SYSTem:ERRor?",
            "layout": { "height": 30, "sticky": "" }
          },
          "Outputs": {
            "type": "OcaBlock",
            "fields": {
              "ERROR": {
                "value": "The number of errors in the queue.",
                "type": "_GuiValue"
              }
            }
          }
        }
      },
      "Get_identification_query": {
        "type": "OcaBlock",
        "description": "Instrument ID",
        "fields": {
          "Execute Command": {
            "type": "_GuiActuator",
            "AES70": "OcaBooleanActuator",
            "active": true,
            "trigger": false,
            "value": "*IDN?",
            "layout": { "height": 30, "sticky": "" }
          },
          "Outputs": {
            "type": "OcaBlock",
            "fields": {
              "identification_string": {
                "value": "An instrument identification string containing manufacturer, model, serial number, and firmware revision.",
                "type": "_GuiValue"
              }
            }
          }
        }
      }
    }
  },
