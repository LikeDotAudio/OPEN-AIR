            "label_inactive": "Set RBW and VBW",
            "active": true,
            "trigger": false,
            "message": ":SENSe:BANDwidth:RESolution <rbw_hz_value>;:SENSe:BANDwidth:VIDeo <vbw_hz_value>",
            "layout": { "height": 30, "sticky": "" }
          },
          "Input": {
            "type": "OcaBlock",
            "fields": {
              "rbw_hz_value": {
                "label": "Resolution Bandwidth (Hz)",
                "value": "100000",
                "type": "_GuiValue",
                "units": "Hz",
                "description": "The SCPI input for RBW."
              },
              "vbw_hz_value": {
                "value": "100000",
                "type": "_GuiValue",
                "label": "Video Bandwidth (Hz)",
                "units": "Hz",
                "description": "The SCPI input for VBW."
              }
            }
          }
        }
