{
  "NAB_Settings": {
    "type": "OcaBlock",
    "description": "NAB Bandwidth Monitoring",
    "show_label": false,
    "fields": {
      "NAB_bandwidth_settings": {
        "type": "OcaBlock",
        "description": "Bandwidth and Sweep Monitoring",
        "fields": {
          "Execute Command": {
            "type": "_GuiActuator",
            "AES70": "OcaBooleanActuator",
            "label_active": "Get Bandwidth Settings",
            "label_inactive": "Get Bandwidth Settings",
            "active": true,
            "trigger": false,
            "message": ":SENSe:BANDwidth:RESolution?;:SENSe:BANDwidth:VIDeo?;:SENSe:BANDwidth:VIDeo:AUTO?;:INITiate:CONTinuous?;:SENSe:SWEep:TIME?",
            "layout": { "height": 30, "sticky": "" }
          },
          "Outputs": {
            "type": "OcaBlock",
            "description": "Bandwidth Readbacks",
            "fields": {
              "RBW_Hz": {
                "label": "Resolution Bandwidth (Hz)",
                "value": "The resolution bandwidth in Hz.",
                "type": "_GuiValue",
                "units": "Hz"
              },
              "VBW_Hz": {
                "label": "Video Bandwidth (Hz)",
                "value": "The video bandwidth in Hz.",
                "type": "_GuiValue",
                "units": "Hz"
              },
              "VBW_Auto_On": {
                "label": "VBW Auto State",
                "value": "Boolean for VBW auto state.",
                "type": "_GuiValue"
              },
              "Continuous_Mode_On": {
                "label": "Continuous Mode State",
                "value": "Boolean for continuous mode state.",
                "type": "_GuiValue"
              },
              "Sweep_Time_s": {
                "label": "Sweep Time (s)",
                "value": "The sweep time in seconds.",
                "type": "_GuiValue",
                "units": "s"
              }
            }
          }
        }
      }
    }
  },
  "RIG_Settings": {
