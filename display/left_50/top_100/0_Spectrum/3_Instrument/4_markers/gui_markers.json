{
  "All Marker On": {
    "type": "OcaBlock",
    "AES70": "OcaMarkerManager",
    "description": "A block for managing global marker settings.",
    "layout": { "sticky": "ew" },
    "fields": {
      "All_Markers_On": {
        "label_active": "All Markers ON",
        "label_inactive": "All Markers ON",
        "type": "_GuiButtonToggle",
        "AES70": "OcaBooleanActuator",
        "handler": "turn_all_markers_on",
        "yak_handler": {
          "enable": true,
          "yak_type": "set",
          "sub_path": "Markers",
          "command": "Set_All_Markers_State",
          "input_name": "state_bool",
          "converter": "bool_to_int"
        },
        "layout": { "height": 30, "sticky": "" },
        "options": {
          "ON": {
            "label_active": "All Markers ON",
            "label_inactive": "All Markers ON",
            "selected": true
          },
          "OFF": {
            "label_active": "All Markers OFF",
            "label_inactive": "All Markers OFF",
            "selected": false
          }
        }
      }
    }
  },
  "Marker 1": {
    "type": "OcaBlock",
    "description": "Settings for Marker 1",
    "layout": { "sticky": "ew" },
    "fields": {
      "Active": {
        "label_active": "Active",
        "label_inactive": "Active",
        "type": "_GuiCheckbox",
        "AES70": "OcaSwitch",
        "handler": "toggle_marker_active",
        "yak_handler": {
          "enable": true,
          "yak_type": "set",
          "sub_path": "Markers",
          "command": "Set_Marker_State",
          "input_name": "state_bool",
          "converter": "bool_to_int",
          "marker_number": 1
        },
        "value": false,
        "layout": { "height": 30 }
      },
      "X_MHz": {
        "label_active": "X",
        "label_inactive": "X",
        "type": "_GuiValue",
        "AES70": "OcaFrequencyActuator",
        "handler": "set_marker_frequency",
        "yak_handler": {
          "enable": true,
          "yak_type": "set",
          "sub_path": "Markers",
          "command": "Set_Marker_X_position",
          "input_name": "hz_value",
          "converter": "mhz_to_hz",
          "marker_number": 1
        },
        "value": "111",
        "units": "MHz"
      },
      "Y_dBm": {
        "label_active": "Y",
        "label_inactive": "Y",
        "type": "_Label",
        "AES70": "OcaLevelSensor",
        "value": "-30",
        "units": "dBm"
      }
    }
  },
