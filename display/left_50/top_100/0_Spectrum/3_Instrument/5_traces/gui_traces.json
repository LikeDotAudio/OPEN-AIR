{
  "Trace 1": {
    "type": "OcaBlock",
    "description": "Settings for Trace 1 Mode",
    "layout": { "sticky": "ew" },
    "fields": {
      "TRACE_MODE_1": {
        "type": "_GuiDropDownOption",
        "AES70": "OcaSwitch",
        "handler": "set_trace_mode",
        "yak_handler": {
          "enable": true,
          "yak_type": "set",
          "sub_path": "Trace",
          "command": "Set_Trace_Mode",
          "input_name": "mode_string",
          "converter": "string",
          "trace_number": 1
        },
        "layout": { "height": 30, "sticky": "ew", "max_cols": 5 },
        "options": {
          "WRITE": {
            "label_active": "LIVE REALTIME",
            "label_inactive": "LIVE REALTIME",
            "description": "Captures and displays the trace in real time, like a hyperactive surveillance camera.",
            "value": "WRITE",
            "units": "mode",
            "selected": false
          },
          "MAXHOLD": {
            "label_active": "MAX HOLD",
            "label_inactive": "MAX HOLD",
            "description": "Keeps the highest-level peaks on display, like a digital trophy case for signals.",
            "value": "MAXHOLD",
            "units": "mode",
            "selected": false
          },
          "MINHOLD": {
            "label_active": "MIN HOLD",
            "label_inactive": "MIN HOLD",
            "description": "Holds onto the lowest points, great for detecting signals that vanish in the noise.",
            "value": "MINHOLD",
            "units": "mode",
            "selected": false
          },
          "BLANK": {
            "label_active": "BLANK",
            "label_inactive": "BLANK",
            "description": "Clears the slate, preparing for a new scan. A zen state for the scanner.",
            "value": "BLANK",
            "units": "mode",
            "selected": false
          },
          "VIEW": {
            "label_active": "VIEW",
            "label_inactive": "VIEW",
            "description": "The standard mode, simply viewing the current sweep data.",
            "value": "VIEW",
            "units": "mode",
            "selected": true
          }
        }
      }
    }
  },
