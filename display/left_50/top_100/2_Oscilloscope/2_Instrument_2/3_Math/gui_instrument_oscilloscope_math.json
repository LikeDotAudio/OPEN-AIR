{
  "Oscilloscope_Main_Station": {
    "type": "OcaBlock",
    "description": "Multi-Dimensional Signal Analyzer",
    "fields": {
      "Display_Sector": {
        "type": "OcaBlock",
        "description": "Visual Data Stream",
        "fields": {
          "Device_Identity": {
            "type": "_TextInput",
            "label_active": "Device Name",
            "value_default": "Flux_Math_Scope_X",
            "message_details": {
              "OSCILLOSCOPE_MODEL": {
                "type": "_GuiActuator",
                "trigger": false,
                "command_value": "SYST:NAME <value>"
              }
            }
          },
          "Main_Graph_Display": {
            "type": "_GuiGraph",
            "label_active": "Spectral / Temporal Display",
            "description": "Visual rendering of Time and Frequency domains",
            "height": 400,
            "message_details": {
              "OSCILLOSCOPE_MODEL": {
                "type": "_GuiActuator",
                "trigger": false,
                "command_value": "DISP:DATA?"
              }
            }
          }
        }
      },
      "Control_Deck_Break": {
        "type": "OcaSeparator",
        "description": "------------------------------------------------"
      },
      "Vertical_Control_Deck_Ch1": {
        "type": "OcaBlock",
        "description": "CHANNEL 1 (Yellow)",
        "fields": {
          "Ch1_Enable": {
            "type": "_GuiButtonToggle",
            "label_active": "CH1 ON",
            "label_inactive": "CH1 OFF",
            "state_default": true,
            "message_details": {
              "OSCILLOSCOPE_MODEL": {
                "type": "_GuiActuator",
                "trigger": false,
                "command_value": "CHAN1:STAT <value>"
              }
            }
          },
          "Ch1_Volts_Div": {
            "type": "_GuiHorizontalKnob",
            "label_active": "Ch1 Scale",
            "value_default": "1.0",
            "min": "0.01",
            "max": "100",
            "unit": "V",
            "message_details": {
              "OSCILLOSCOPE_MODEL": {
                "type": "_GuiActuator",
                "trigger": false,
                "command_value": "CHAN1:SCAL <value>"
              }
            }
          }
        }
      },
      "Vertical_Control_Deck_Ch2": {
        "type": "OcaBlock",
        "description": "CHANNEL 2 (Blue)",
        "fields": {
          "Ch2_Enable": {
            "type": "_GuiButtonToggle",
            "label_active": "CH2 ON",
            "label_inactive": "CH2 OFF",
            "state_default": true,
            "message_details": {
              "OSCILLOSCOPE_MODEL": {
                "type": "_GuiActuator",
                "trigger": false,
                "command_value": "CHAN2:STAT <value>"
              }
            }
          },
          "Ch2_Volts_Div": {
            "type": "_GuiHorizontalKnob",
            "label_active": "Ch2 Scale",
            "value_default": "1.0",
            "min": "0.01",
            "max": "100",
            "unit": "V",
            "message_details": {
              "OSCILLOSCOPE_MODEL": {
                "type": "_GuiActuator",
                "trigger": false,
                "command_value": "CHAN2:SCAL <value>"
              }
            }
          }
        }
      },
      "Math_Control_Deck": {
        "type": "OcaBlock",
        "description": "MATH & FFT (Purple)",
        "fields": {
          "Math_Enable": {
            "type": "_GuiButtonToggle",
            "label_active": "MATH ON",
            "label_inactive": "MATH OFF",
            "state_default": false,
            "message_details": {
              "OSCILLOSCOPE_MODEL": {
                "type": "_GuiActuator",
                "trigger": false,
                "command_value": "MATH:DISP <value>"
              }
            }
          },
          "Math_Operation": {
            "type": "_GuiDropDownOption",
            "label_active": "Operation",
            "options": ["A+B", "A-B", "A*B", "FFT"],
            "default_option": "A-B",
            "message_details": {
              "OSCILLOSCOPE_MODEL": {
                "type": "_GuiActuator",
                "trigger": false,
                "command_value": "MATH:OPER <value>"
              }
            }
          },
          "Math_Scale": {
            "type": "_GuiHorizontalKnob",
            "label_active": "Math Scale",
            "value_default": "1.0",
            "unit": "U",
            "message_details": {
              "OSCILLOSCOPE_MODEL": {
                "type": "_GuiActuator",
                "trigger": false,
                "command_value": "MATH:SCAL <value>"
              }
            }
          },
          "Math_Offset": {
            "type": "_GuiHorizontalKnob",
            "label_active": "Math Offset",
            "value_default": "0.0",
            "unit": "U",
            "message_details": {
              "OSCILLOSCOPE_MODEL": {
                "type": "_GuiActuator",
                "trigger": false,
                "command_value": "MATH:OFFS <value>"
              }
            }
          }
        }
      },
      "FFT_Special_Deck": {
        "type": "OcaBlock",
        "description": "Spectral Parameters (FFT Only)",
        "fields": {
          "FFT_Window": {
            "type": "_GuiDropDownOption",
            "label_active": "Window",
            "options": ["RECT", "HANN", "HAMM", "BLACK"],
            "default_option": "HANN",
            "message_details": {
              "OSCILLOSCOPE_MODEL": {
                "type": "_GuiActuator",
                "trigger": false,
                "command_value": "MATH:FFT:WIND <value>"
              }
            }
          },
          "FFT_Center": {
            "type": "_GuiHorizontalKnob",
            "label_active": "Center Freq",
            "value_default": "1000",
            "min": "0",
            "max": "1000000000",
            "unit": "Hz",
            "message_details": {
              "OSCILLOSCOPE_MODEL": {
                "type": "_GuiActuator",
                "trigger": false,
                "command_value": "MATH:FFT:CENT <value>"
              }
            }
          },
          "FFT_Span": {
            "type": "_GuiHorizontalKnob",
            "label_active": "Freq Span",
            "value_default": "10000",
            "min": "10",
            "max": "1000000000",
            "unit": "Hz",
            "message_details": {
              "OSCILLOSCOPE_MODEL": {
                "type": "_GuiActuator",
                "trigger": false,
                "command_value": "MATH:FFT:SPAN <value>"
              }
            }
          }
        }
      },
      "Horizontal_Control_Deck": {
        "type": "OcaBlock",
        "description": "Timebase",
        "fields": {
          "Time_Div": {
            "type": "_GuiHorizontalKnob",
            "label_active": "Time / Div",
            "value_default": "1e-3",
            "min": "1e-9",
            "max": "10",
            "unit": "s",
            "message_details": {
              "OSCILLOSCOPE_MODEL": {
                "type": "_GuiActuator",
                "trigger": false,
                "command_value": "TIM:SCAL <value>"
              }
            }
          }
        }
      },
      "Trigger_Systems": {
        "type": "OcaBlock",
        "description": "Trigger",
        "fields": {
          "Trigger_Source": {
             "type": "_GuiDropDownOption",
             "label_active": "Source",
             "options": ["CHAN1", "CHAN2", "EXT", "LINE"],
             "default_option": "CHAN1",
             "message_details": {
               "OSCILLOSCOPE_MODEL": {
                 "type": "_GuiActuator",
                 "trigger": false,
                 "command_value": "TRIG:SOUR <value>"
               }
             }
          },
          "Trigger_Level": {
            "type": "_GuiHorizontalKnob",
            "label_active": "Level",
            "value_default": "0.5",
            "unit": "V",
            "message_details": {
              "OSCILLOSCOPE_MODEL": {
                "type": "_GuiActuator",
                "trigger": false,
                "command_value": "TRIG:LEV <value>"
              }
            }
          }
        }
      },
      "Acquisition_Main": {
        "type": "OcaBlock",
        "description": "Control",
        "fields": {
          "Run_Stop_Toggle": {
            "type": "_GuiButtonToggle",
            "label_active": "RUN",
            "label_inactive": "STOP",
            "state_default": true,
            "message_details": {
              "OSCILLOSCOPE_MODEL": {
                "type": "_GuiActuator",
                "trigger": false,
                "command_value": "ACQ:STATE <value>"
              }
            }
          },
           "Single_Shot": {
            "type": "_GuiButton",
            "label_active": "SINGLE",
            "message_details": {
              "OSCILLOSCOPE_MODEL": {
                "type": "_GuiActuator",
                "trigger": true,
                "command_value": "ACQ:MOD SING;RUN"
              }
            }
          }
        }
      }
    }
  }
}