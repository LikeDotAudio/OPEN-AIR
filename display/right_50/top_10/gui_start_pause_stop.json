        "selected": false
      },
      "PAUSE": {
        "label_active": "PAUSE",
        "label_inactive": "RESUME",
        
        "description": "Pauses the program's current process.",
        "selected": false
      },
      "STOP": {
        "label_active": "STOP",
        "label_inactive": "STOP",
        
        "description": "Halts the program's current process.",
        "selected": true
      }
    }
  }
