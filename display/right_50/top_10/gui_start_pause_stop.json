{
  "HeaderStatus": {
    "type": "_HeaderStatusLight",
    "description": "Global Status Indicator for the Header",
    "layout": {
      "side": "top",
      "fill": "x",
      "padx": 5,
      "pady": 2
    }
  },
  "Buttons": {
    "type": "_GuiButtonToggler",
    "AES70": "OcaTransportActuator",
    "description": "START PAUSE STOP BUTTONS",
    "handler": "handle_transport_state",
    "layout": {
      "sticky": "ew",
      "max_cols": 3,
      "height": 40
    },
    "options": {
      "START": {
        "label_active": "START",
        "label_inactive": "START",
